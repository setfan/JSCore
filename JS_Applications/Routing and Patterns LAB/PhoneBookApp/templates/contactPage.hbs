<section id="contacts">
    <div class="container">
        <div id="book" class="box-large">
            <div id="list">
                {{> contactsList}}
            </div>
            <div id="details">
                {{#if selected}}
                    {{> contactDetails}}
                {{else}}
                    <h1>Details</h1>
                    <div class="content">
                        Please select contact.
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>